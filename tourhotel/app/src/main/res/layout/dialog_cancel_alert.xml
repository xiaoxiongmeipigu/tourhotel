<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/shape_rect_solid_white_round_5">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/shop_black"
        android:textSize="@dimen/text_big"
        android:textIsSelectable="true"
        android:lineSpacingMultiplier="1.3"
        android:background="@color/background_gray"
        />

   <EditText
       android:id="@+id/info_et"
       android:layout_width="match_parent"
       android:layout_height="145dp"
       android:layout_margin="@dimen/margin_2"
       android:background="@color/background_gray"
       android:gravity="top|left"
       android:padding="@dimen/margin_2"
       android:textColorHint="#aaaaaa"
       android:textColor="#666666"
       android:hint="输入取消理由"
       />

    <LinearLayout
        android:id="@+id/dell_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        >

        <TextView
            android:id="@+id/left_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="左按钮"
            android:textSize="@dimen/text_normal"
            android:textColor="@drawable/selector_press_text_color_light_black"
            android:background="@drawable/selector_press_bg_color_stroke_light_black_round_5"
            />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右按钮"
            android:textSize="@dimen/text_normal"
            android:layout_marginLeft="14dp"
            android:textColor="@drawable/selector_press_text_color_blue"
            android:background="@drawable/selector_pressed_color_blue_round_5"
            />
    </LinearLayout>
</LinearLayout>
