<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.tourhotel.activity.SetPsdActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新  密  码"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/psd_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="请输入新密码"
            android:textColorHint="@color/light_black"
            android:textSize="@dimen/text_big"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/clear_psd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/clear_gray"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:visibility="gone"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/psd_two_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="请确认密码"
            android:textColorHint="@color/light_black"
            android:textSize="@dimen/text_big"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/clear_psd_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/clear_gray"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:visibility="gone"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:text="确认提交"
        android:textColor="@color/shop_white"
        android:textSize="@dimen/text_big_x"
        android:gravity="center"
        android:background="@drawable/selector_pressed_color_blue_round_5"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        />

</LinearLayout>
