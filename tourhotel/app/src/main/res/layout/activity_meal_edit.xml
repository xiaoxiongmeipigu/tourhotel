<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.zjhj.tourhotel.activity.meal.MealAddActivity">

    <include
        layout="@layout/lay_header_blue"
        />

    <com.zjhj.tourhotel.widget.MyScrollview
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_header"
        android:layout_above="@+id/bottom_ll"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="套餐名称"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入套餐名称"
                    android:textColorHint="@color/light_black"
                    android:text=""
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/shop_black"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="套餐价格"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    />

                <EditText
                    android:id="@+id/original_price_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入套餐单价"
                    android:textColorHint="@color/light_black"
                    android:text=""
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/shop_black"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传套餐封面"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2"
                    >

                    <LinearLayout
                        android:id="@+id/cover_ll"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rect_solid_gray_round_10"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/camera"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传"
                            android:textSize="@dimen/text_big"
                            android:textColor="#aaaaaa"
                            android:layout_marginTop="@dimen/margin_2"
                            />

                    </LinearLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/cover_pic"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        fresco:fadeDuration="2000"
                        fresco:placeholderImage="@mipmap/img_default"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarAutoRotateInterval="2000"
                        fresco:progressBarImage="@drawable/progress"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:roundedCornerRadius="10dp"
                        fresco:roundTopLeft="true"
                        fresco:roundTopRight="true"
                        fresco:roundBottomLeft="true"
                        fresco:roundBottomRight="true"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="菜品"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:gravity="center_vertical"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传菜单图片"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:minHeight="@dimen/text_height_50dp"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="营销活动"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    />

                <EditText
                    android:id="@+id/content_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入活动内容"
                    android:textColorHint="@color/light_black"
                    android:text=""
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/shop_black"
                    android:background="@null"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_gray"
                android:layout_marginBottom="@dimen/margin_3"
                />

        </LinearLayout>

    </com.zjhj.tourhotel.widget.MyScrollview>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_big_x"
            android:textColor="@color/light_black"
            android:background="@color/background_gray"
            android:text="下架"
            />

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_big_x"
            android:textColor="@color/shop_white"
            android:background="@color/shop_blue"
            android:text="保存"
            />

    </LinearLayout>

</RelativeLayout>
