<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/shop_black</item>
        <!--导航栏底色-->
        <!--  <item name="colorPrimary">@color/colorPrimary</item>-->
        <!-- <item name="colorAccent">@color/shop_orange</item>-->
        <!--可以统一背景色-->
        <item name="android:windowBackground">@color/background_all</item>
        <item name="android:textColor">@color/shop_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@mipmap/splash_screen</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loading_dialog" parent="Widget.AppCompat.ProgressBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/shop_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="textViewStyle_small_gray">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="textViewStyle_small_black">
        <item name="android:textColor">@color/shop_black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="editViewStyle">
        <item name="android:textColor">@color/shop_black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TabLayoutTextAppearance_size_big" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="textViewStyle_big_x">
        <item name="android:textColor">@color/shop_black</item>
        <item name="android:textSize">@dimen/text_big_x</item>
    </style>

    <!--弹框样式-->
    <style name="image_dialog_theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/slideAnimation</item>
    </style>

    <style name="slideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_in_duration</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_duration</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <!--从底部由下往上进入-->
    <style name="popup_slide_in">
        <item name="android:windowEnterAnimation">@anim/slide_down_in_duration_500</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_duration_500</item>
    </style>

    <!--弹框样式-->
    <style name="dialog_theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>


</resources>
